{
  "manifest_version": 3,
  "name": "영수증 OCR & CSV 변환기",
  "version": "2.0.0",
  "description": "영수증 사진을 OCR.space API로 처리하여 CSV 파일로 저장합니다 (CSP 문제 해결).",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://cdn.jsdelivr.net/*",
    "https://unpkg.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src https://api.ocr.space"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
